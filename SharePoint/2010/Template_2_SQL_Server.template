                    {
                        "VolumeId" : {
                            "Ref" : "SQLStripeVolume5"
                        },
                        "Device"   : "/dev/xvdj"
                    },
                    {
                        "VolumeId" : {
                            "Ref" : "SQLStripeVolume6"
                        },
                        "Device"   : "/dev/xvdk"
                    }
