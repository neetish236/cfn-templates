                "SecurityGroupIds" : [
                    {
                        "Ref" : "DomainMemberSGID"
                    },
                    {
                        "Ref" : "SqlServerSecurityGroupID"
                    }
                ],
                "KeyName"          : {
                    "Ref" : "KeyPairName"
                },
                "UserData"         : {
                    "Fn::Base64" : {
                        "Fn::Join" : [
                            "",
                            [
                                "<script>\n",
                                "cfn-init.exe -v -c config -s ",
                                {
                                    "Ref" : "AWS::StackName"
                                },
                                " -r SQLServer1 ",
                                " --access-key ",
                                {
                                    "Ref" : "IAMUserAccessKey"
                                },
                                " --secret-key ",
                                {
