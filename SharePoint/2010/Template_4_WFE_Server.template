                                {
                                    "Ref" : "AWS::StackName"
                                },
                                " -r WebSVR1 ",
                                " --access-key ",
                                {
                                    "Ref" : "IAMUserAccessKey"
                                },
                                " --secret-key ",
                                {
                                    "Fn::GetAtt" : [
                                        "IAMUserAccessKey",
